{
    "env": {
        "es2021": true,
        "node": true,
        "browser": true
    },
    "extends": [
        // "standard-with-typescript",
        "eslint:recommended", 
        "plugin:@typescript-eslint/recommended", // ts-plugin enabled
        "plugin:prettier/recommended" // prettier-plugin enabled
    ],
    "plugins": [
        "@typescript-eslint" // ts-plugin enabled
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser", // ts-plugin enabled
    "parserOptions": {
        "ecmaVersion": "latest",
        // "sourceType": "module", // ts-plugin disabled
        "project": [
            "./tsconfig.json",
            "./src/tsconfig.json"
        ]
    },
    "rules": {},
    "root": true // ts-plugin enabled
}